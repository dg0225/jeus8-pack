#!/bin/sh

# set up JEUS_HOME.
if [ -z "$JEUS_HOME" ] ; then
   PRG="$0"
   progname=`basename "$0"`
   saveddir=`pwd`

   dirname_prg=`dirname "$PRG"`
   cd "$dirname_prg"

   while [ -h "$PRG" ] ; do
      ls=`ls -ld "$PRG"`
      link=`expr "$ls" : '.*-> \(.*\)$'`
      if expr "$link" : '/.*' > /dev/null; then
      PRG="$link"
      else
        PRG=`dirname "$PRG"`"/$link"
      fi
   done

   JEUS_HOME=`dirname "$PRG"`/..

   cd "$saveddir"

   JEUS_HOME=`cd "$JEUS_HOME" && pwd`

fi

# set JEUS properties
. "${JEUS_HOME}/bin/jeus.properties"

# set boot parameter
BOOT_PARAMETER=$*

# set CLASS_PATH
CLASS_PATH="${JEUS_HOME}/lib/client/clientcontainer.jar"
CLASS_PATH="$CLASS_PATH:${JEUS_HOME}/lib/system/jaxb-osgi.jar"
CLASS_PATH="$CLASS_PATH:${JEUS_HOME}/lib/system/woodstox-core-asl.jar"
CLASS_PATH="$CLASS_PATH:${JEUS_HOME}/lib/system/jaxb2-basics-runtime.jar"
CLASS_PATH="$CLASS_PATH:${JEUS_HOME}/lib/system/jeusasm.jar"
CLASS_PATH="$CLASS_PATH:${JEUS_HOME}/lib/system/xalan.jar"
CLASS_PATH="$CLASS_PATH:${JEUS_HOME}/lib/system/xsltc.jar"

# execute appclient
"${JAVA_HOME}/bin/java" -classpath "${CLASS_PATH}"                                              \
    ${TOOL_OPTION}                                                                              \
    -Djava.endorsed.dirs="${JEUS_HOME}/lib/endorsed"                                            \
    -Djeus.log.level=WARNING                                                                    \
    -Djava.naming.factory.initial=jeus.jndi.JNSContextFactory                                   \
    -Djava.naming.factory.url.pkgs=jeus.jndi.jns.url                                            \
    ${JAVA_ARGS}                                                                                \
    jeus.client.container.ClientContainer ${BOOT_PARAMETER}
